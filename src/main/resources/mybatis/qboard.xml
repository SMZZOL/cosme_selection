<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="dev.mvc.qboard.QboardDAOInter">
  <!-- 등록한 레코드 갯수 1 리턴 -->
  <insert id="create" parameterType="dev.mvc.qboard.QboardDAOInter">
    INSERT INTO qboard(qboardno, qtitle, qcontent, rdate)
    VALUES(qboard_seq.nextval,  #{qtitle}, #{qcontent}, sysdate)

  </insert>
  
  <!-- 모든 카테고리의 등록된 글목록 -->
  <!-- 질문 게시판 글목록 -->
  <select id="list_all" resultType="dev.mvc.qboard.QboardVO">
    SELECT qboardno, qtitle, qcontent, rdate 
    FROM qboard 
    ORDER BY qboardno ASC
  </select>
  
  <delete id="delete" parameterType="int">
    DELETE FROM qboard
    WHERE qboardno=#{qboardno}
  </delete>


         
</mapper> 